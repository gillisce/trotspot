                                    <!-- at 'Update Use Case' button click - show 'editable' text inside text box or text area -->
                                    <div class="divYesEditing hide  paddingLeftDesktopOnly_15px">
                                        @Html.EditorFor(model => model.horse.ysnCheckedIn)
